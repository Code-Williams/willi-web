<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Willi Website</title>

        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/uploader.css">
        <link rel="stylesheet" href="/css/fonts.css">
    </head>
    <body>
        <%- include("./templates/header.ejs") %>

        <% for(const key in flash){ %>
                          
            <span role="alert" class="flash">
              <%= flash[key] %>
            </span>

          <% } %>

          <div class="uploader-main">
            <form action="/uploader" method="post" enctype="multipart/form-data" class="form-input">

                <div class="services-right">
                    <div class="services-inp-handler">
                        <p>نام</p>
                        <input type="text" name="name" required class="services-inp">
                    </div>

                    <div class="services-inp-handler">
                        <p>توضیحات</p>
                        <textarea type="text" name="description" required class="services-inp"> </textarea>
                    </div>

                    <input type="file" name="file" class="uploadFile" id="file2" >
                    <button type="submit" class="submit">ارسال فایل</button>
                </div>

            </form>
        </div>
    </body>
</html>